<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Occurence_Date__c</field>
        <field>Name</field>
        <field>Vendor_Name__c</field>
        <field>Marketing_Category__c</field>
        <field>Department__c</field>
        <field>Expense_Amount__c</field>
        <field>Quick_Note__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>bayli@gumgum.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Expenses__c.Department__c</field>
                <operation>equals</operation>
                <value>Sports</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Sports_Marketing Expense Approval</label>
        <name>Sports_Marketing_Expense_Approval</name>
    </approvalStep>
    <emailTemplate>Marketing_Email_Templates/Marketing_Expense_Approval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Expense_Status_Update_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Marketing_Expense_Submission_Approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Expense_Status_Update_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Updated_Status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>New Sports Marketing Expense Approval</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Expense_Status_Update_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
